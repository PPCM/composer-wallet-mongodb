{
  "name": "composer-wallet-mongodb",
  "version": "0.0.1",
  "description": "This is Hyperledger Composer Wallet implementation using MongoDB as a store.",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "postlicchk": "npm run doc",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.json",
    "test-inner": "mocha -t 0 --recursive",
    "test-cover": "nyc npm run test-inner",
    "test": "npm run test-inner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PPCM/composer-wallet-mongodb.git"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "composer",
    "mongodb"
  ],
  "author": "Pierre PINTARIC",
  "license": "Apache-2.0",
  "homepage": "https://github.com/PPCM/composer-wallet-mongodb#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "composer-common": "^0.19.11",
    "jsrsasign": "^8.0.9",
    "mongoose": "^5.0.13",
    "path": "^0.12.7"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!./scripts/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "features/**",
      "out/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "eslint": "^4.19.1",
    "jsdoc": "^3.5.5",
    "license-check": "^1.1.5",
    "lodash": "^4.17.5",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "sinon": "^4.5.0"
  }
}
